<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyhooves.healthyhoovescalculator" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/HealthyHoovesTheme" >

        <activity
            android:name=".quotedisplay.QuoteListActivity"
            android:label="@string/company_name"
            android:theme="@style/HealthyHoovesTheme.List">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".mainmenu.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/HealthyHoovesTheme.NoActionBar" >
        </activity>

        <activity android:name=".storepage.StorePageActivity"
            android:label="@string/company_name"
            android:theme="@style/HealthyHoovesTheme" >
        </activity>

        <activity android:name=".quotedisplay.ShowQuoteActivity"
            android:label="@string/company_name"
            android:theme="@style/HealthyHoovesTheme.List"
            android:parentActivityName=".quotedisplay.QuoteListActivity" >
        </activity>

    </application>

</manifest>
