<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center">
        <shape
            android:shape="rectangle">
            <size
                android:width="240dp"
                android:height="48dp"/>
            <solid
                android:color="@color/hh_blue" />
        </shape>
    </item>
    <item
        android:right="240dp">
        <shape
            android:shape="oval">
            <size
                android:width="48dp"
                android:height="48dp"/>
            <solid
                android:color="@color/hh_blue"/>
        </shape>
    </item>
</layer-list>